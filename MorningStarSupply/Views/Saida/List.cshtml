@model IEnumerable<MorningStarSupply.Models.Saida>

@{
    ViewData["Title"] = "Tabela de Saídas";
}

<section class="text-center">
    <!-- Background image -->
    <div class=" p-5 bg-image" style="
        background-image: url('https://mdbootstrap.com/img/new/textures/full/171.jpg');
        height: 300px;

     ">
        <h3 class="display-3 fw-bold ls-tight mb-4" style="color:white;">Saídas</h3> 
    </div>

    <div class="card mx-4 mx-md-5 shadow-5-strong" style="
        margin-top: -100px;
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        ">
    <div class="card-body py-5 px-md-5">
   
        <table  class ="table table-striped"  id="table_id" >
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.MercadoriaRegistro)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataHora)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Quantidade)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                      @Html.DisplayFor(modelItem => item.MercadoriaRegistro)
                     </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataHora)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantidade)
                    </td>
                        <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary rounded-pill btn-floating btn-sm">
                                        <i class="fa-solid fa-pen p-2"></i>
                                     </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id"  class="btn btn-primary rounded-pill btn-floating btn-sm">
                                        <i class="fa-solid fa-trash p-2"></i>
                                    </a>
                        </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>
</section>